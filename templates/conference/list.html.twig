{% extends 'base.html.twig' %}

{% block title 'All Conferences' %}

{% block body %}
<section id="list-conferences">
    <div class="container">
        <div class="row">
            <div class="col-md-10 m-auto">
                <h1 class="fw-bolder" style="color: limegreen;">List all conferences</h1>
                <div>
                    <twig:Conference:ListFilter :from_date="from_date" :to_date="to_date"></twig:Conference:ListFilter>
                </div>
                <div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
                    {% for conference in conferences %}
                        <div class="col">
                            <twig:Conference:Card :conference="conference"></twig:Conference:Card>
                        </div>
                    {% else %}
                        <div> There are no conferences yet...</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
